---
import Wrapper from "../components/Wrapper.astro";
import Layout from "../layouts/Layout.astro";

import riftsSchedule from "../data/rifts.json";
import fortressSchedule from "../data/fortress.json";
import battlefieldSchedule from "../data/battlefield.json";
import { CurrentActivities } from "../components/React/CurrentActivities";
---

<Layout title="Аион расписание | Доступные активности">
  <Wrapper>
    <CurrentActivities
      rifts={riftsSchedule}
      fortress={fortressSchedule}
      battlefields={battlefieldSchedule}
      client:load
    />
  </Wrapper>
</Layout>
